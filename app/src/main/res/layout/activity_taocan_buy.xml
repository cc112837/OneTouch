<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_green"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.wzy.mhealth.activities.TaocanBuyActivity">

    <FrameLayout
        android:id="@+id/titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_green"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleView"
            style="@style/white20Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="购买" />

        <ImageView
            android:id="@+id/leftBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@mipmap/btn_back" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="体检套餐" />

            <TextView
                android:id="@+id/newid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:paddingLeft="10dp"
                android:textColor="@color/orange"
                android:text="88元" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/grey_bg" />
        <LinearLayout
            android:id="@+id/ll_youhui"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="优惠劵"
                android:textColor="@color/dark_grey"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:text="使用优惠劵>"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_bg" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="共需支付"
                android:textColor="@color/dark_grey"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:text="88元"
                android:textColor="@color/orange"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择支付方式"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="15dp"
            android:background="@color/grey_bg" />
        <com.wzy.mhealth.view.PayRadioGroup
            android:id="@+id/pay_fun"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            my:orientation="vertical" >
        <com.wzy.mhealth.view.PayRadioPurified
            android:id="@+id/alipay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_selector"
            my:desc="支付银行卡支付，支付更安全"
            my:checked="true"
            my:logo1="@drawable/ic_alipay_plugin"
            my:radio="@drawable/radio"
            my:title1="支付宝支付" />
        <com.wzy.mhealth.view.PayRadioPurified
            android:id="@+id/bank"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_selector"
            my:desc="支持手机网银支付"
            my:logo1="@drawable/ic_uppay_plugin"
            my:radio="@drawable/radio"
            my:title1="银联支付" />
        </com.wzy.mhealth.view.PayRadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_pay"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/login_btn_icon"
                android:text="立即购买"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
