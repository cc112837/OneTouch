<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_all"
    android:layout_height="match_parent"
    android:background="@color/title_green"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"></FrameLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/grey_bg"
            android:padding="1dp" />
        <RadioGroup
            android:id="@+id/main_tabBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/main_home"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:paddingTop="5dp"
                android:text="首页"
                android:textColor="@drawable/selector_textcolor"
                android:textSize="14sp"
                android:layout_height="match_parent"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/selector_home"
                android:gravity="center" />

            <TextView
                android:id="@+id/countView"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:background="@drawable/shape_dot"
                android:layout_gravity="clip_vertical"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone" />
            <RadioButton
                android:id="@+id/main_news"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:button="@null"
                android:text="资讯"
                android:textColor="@drawable/selector_textcolor"
                android:textSize="14sp"
                android:drawableTop="@drawable/selector_news"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/main_friend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:button="@null"
                android:text="友圈"
                android:textColor="@drawable/selector_textcolor"
                android:textSize="14sp"
                android:drawableTop="@drawable/selector_friend"
                android:gravity="center" />



            <RadioButton
                android:text="我的"
                android:textColor="@drawable/selector_textcolor"
                android:textSize="14sp"
                android:id="@+id/main_my"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/selector_my"
                android:gravity="center" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
