<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/title_green"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_green"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="病历"
            android:textColor="#ffffff"
            android:textSize="@dimen/fontSizeMidMM" />

        <ImageView
            android:id="@+id/leftBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fontTitle"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@mipmap/btn_back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/title1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="我的健康档案"
                android:textColor="@color/title_green"
                android:textSize="@dimen/fontSizeMidM" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="@color/grey_bg"
            android:padding="1dp" />

        <ListView
            android:id="@+id/tab_binglifragment_listview_jiankang"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:divider="#ffffff" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="@color/grey_bg"
            android:padding="1dp" />

        <RelativeLayout
            android:id="@+id/title2"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="我的病历"
                android:textColor="@color/title_green"
                android:textSize="@dimen/fontSizeMidM" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/grey_bg"
            android:padding="1dp" />

        <ListView
            android:id="@+id/tab_binglifragment_listview_bingli"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:divider="#ffffff" />
    </LinearLayout>
</LinearLayout>