<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/doctorlistLinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_green"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_green"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/leftBtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:paddingLeft="15dp"
            android:src="@mipmap/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="用户评价"
            android:textColor="#ffffff"
            android:textSize="@dimen/fontSizeMidMM" />
    </RelativeLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:id="@+id/rg_all"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tv_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_evalution"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="全部"
            android:textColor="@drawable/selector_textcolor" />

        <RadioButton
            android:id="@+id/tv_satis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_evalution"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="满意"
            android:textColor="@drawable/selector_textcolor" />

        <RadioButton
            android:id="@+id/tv_nosatis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_evalution"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="不满意"
            android:textColor="@drawable/selector_textcolor" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5px"
            android:background="#666666" />

        <ListView
            android:id="@+id/doctorlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"></ListView>
    </LinearLayout>
</LinearLayout>