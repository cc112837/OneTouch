<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bingli_listitem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="已确诊"
                android:textColor="#666666"
                android:textSize="@dimen/fontSizeMid" />

            <TextView
                android:id="@+id/interact_listitem_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="病情"
                android:textColor="#666666"
                android:textSize="@dimen/fontSizeMid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="挂号信息"
                android:textColor="#666666"
                android:textSize="@dimen/fontSizeMid" />

            <TextView
                android:id="@+id/interact_listitem_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="时间"
                android:textColor="#666666"
                android:textSize="@dimen/fontSizeMid" />

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:baselineAligned="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/bingli_listitem_marriage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="#666666"
                    android:textSize="@dimen/fontSizeMid" />

               <!--  <TextView
                    android:id="@+id/interact_listitem_child"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="#666666"
                    android:textSize="@dimen/fontSizeMid" /> -->

                <TextView
                    android:id="@+id/interact_listitem_shoushu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="手术"
                    android:textColor="#666666"
                    android:textSize="@dimen/fontSizeMid" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/interact_listitem_arrow_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@mipmap/arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey_bg"
        android:padding="1dp" />

</LinearLayout>